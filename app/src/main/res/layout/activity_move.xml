<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Move">

    <ImageView
        android:id="@+id/invMoveTitle"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/invmovemenu2" />

    <ListView
        android:id="@+id/moveMenu2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invMoveTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/customshape"></ListView>

    <ProgressBar
        android:id="@+id/progBarMove"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shaperoundblue"
        android:visibility="invisible" />

</RelativeLayout>